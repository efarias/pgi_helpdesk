<odoo>
    <record id="view_helpdesk_ticket_stage_form_inherit_close" model="ir.ui.view">
        <field name="name">helpdesk.ticket.stage.form.inherit.ticket_close</field>
        <field name="model">helpdesk.ticket.stage</field>
        <field name="inherit_id" ref="helpdesk_mgmt.view_helpdesk_ticket_stage_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='closed']" position="after">
                <field name="ticket_close"/>
            </xpath>
        </field>
    </record>
</odoo>
