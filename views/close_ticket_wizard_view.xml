<odoo>
    <!-- Vista del formulario del wizard -->
    <record id="view_close_ticket_wizard_form" model="ir.ui.view">
        <field name="name">close.ticket.wizard.form</field>
        <field name="model">close.ticket.wizard</field>
        <field name="arch" type="xml">
            <form string="Cerrar Ticket">
                <group>
                    <field name="close_note" widget="html" />
                </group>
                <footer>
                    <button string="Cerrar Ticket"
                            type="object"
                            name="action_close_ticket"
                            class="btn-primary"/>
                    <button string="Cancelar"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n para abrir el wizard -->
    <record id="action_close_ticket_wizard" model="ir.actions.act_window">
        <field name="name">Cerrar Ticket</field>
        <field name="res_model">close.ticket.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="helpdesk_mgmt.model_helpdesk_ticket"/>
        <field name="context">{'default_ticket_id': active_id}</field>
    </record>
</odoo>
